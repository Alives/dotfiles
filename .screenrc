startup_message off
vbell off
msgwait 1
hardstatus alwayslastline

# Turns off alternate screen switching in xterms,
# so that text in screen will go into the xterm's scrollback buffer:
termcapinfo xterm* ti@:te@
altscreen on

# Log 10000 lines
defscrollback 10000
#hardstatus string '%{wK}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wK}%?%+Lw%?'
hardstatus alwayslastline '%{wk}%?%-Lw%?%{=b kR}[%{W}%n%f %t%?(%u)%?%{=b kR}]%{= kw}%?%+Lw%?%?%=[%{Y}%l%{g}]%{=b C}[ %D %m/%d %C%a ]%{W}'
